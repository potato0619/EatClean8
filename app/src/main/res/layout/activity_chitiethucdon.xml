<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ChitiethucdonActivity">
    <androidx.appcompat.widget.Toolbar
        app:title="Chi tiết thực đơn"
        android:id="@+id/toolbar"
        android:background="#637ABF"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <ImageView
        android:layout_marginLeft="50dp"
        android:layout_below="@id/toolbar"
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="200dp"/>
    <TextView
        android:textColor="#000"
        android:layout_margin="10dp"
        android:layout_below="@id/image"
        android:textSize="20dp"
        android:text="Nguyên liệu gồm:"
        android:id="@+id/tv_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="nguyên liệu của để nấu gồm"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/tv_line1"
        android:id="@+id/tv_nguyen_lieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>